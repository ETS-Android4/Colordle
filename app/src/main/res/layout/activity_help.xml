<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galaxy"
    tools:context=".Help">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/help_box"
        android:fontFamily="@font/mario"
        android:gravity="center"
        android:text="@string/step2"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/help_box"
        android:fontFamily="@font/mario"
        android:gravity="center"
        android:text="@string/step1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Help" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginBottom="279dp"
        android:background="@drawable/help_box"
        android:fontFamily="@font/mario"
        android:gravity="center"
        android:text="@string/step3"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/mario"
        android:shadowColor="#C01AEC"
        android:shadowDx="8.9"
        android:shadowDy="7.3"
        android:shadowRadius="1.3"
        android:text="@string/play"
        android:textColor="@color/white"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="@color/misc"
        android:fontFamily="@font/mario"
        android:onClick="onBtnClickMainPage"
        android:text="@string/back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>